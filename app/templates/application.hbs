<nav class="navbar navbar-expand-lg navbar-light bg-light">
  {{#link-to "index"}}
    <a class="navbar-brand" href="">StarWars Game</a>
  {{/link-to}}
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        {{#link-to "index"}}
          <a class="nav-link" href="">Home <span class="sr-only">(current)</span></a>
        {{/link-to}}
      </li>
      <li class="nav-item active">
        {{#if this.personsNumber.totalPeople}}
          {{#link-to "people"}}
            <a class="nav-link" href="">People ({{this.personsNumber.totalPeople}})<span class="sr-only">(current)</span></a>
          {{/link-to}}
        {{else}}
          <p class="nav-link">People Loading...<span class="sr-only">(current)</span></p>
        {{/if}}
      </li>
      <li class="nav-item active">
        {{#if this.starshipsNumber.totalStarships}}
          {{#link-to "starships"}}
            <a class="nav-link" href="">Starships ({{this.starshipsNumber.totalStarships}})<span class="sr-only">(current)</span></a>
          {{/link-to}}
        {{else}}
          <p class="nav-link">Starships Loading...<span class="sr-only">(current)</span></p>
        {{/if}}
      </li>
      <li class="nav-item active">
        {{#link-to "leaderboard"}}
          <a class="nav-link" href="">Leaderboard <span class="sr-only">(current)</span></a>
        {{/link-to}}
      </li>
      <li class="nav-item active">
        {{player-one addedPlayerProp=playerDropdown}}
      </li>
      <li class="nav-item active">
        {{player-two addedPlayerProp=playerDropdown}}
      </li>
    </ul>
    <form {{action "addPlayer" on="submit"}} class="form-inline my-2 my-lg-0">
      <div >
        <p>{{input type="text" value=name class="player-input"}}</p>
      </div>
      <button class="btn btn-outline-success my-2 my-sm-0">Add Player</button>
    </form>
  </div>
</nav>
{{outlet}}
